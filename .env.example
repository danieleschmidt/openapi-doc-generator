# Quantum Task Planner Configuration
# Copy this file to .env and customize the values

# ================================
# Application Configuration
# ================================
ENVIRONMENT=production
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false
PORT=8080

# ================================
# Quantum Planner Settings
# ================================
QUANTUM_TEMPERATURE=2.0
QUANTUM_COOLING_RATE=0.95
QUANTUM_RESOURCES=4
QUANTUM_VALIDATION_LEVEL=moderate
QUANTUM_SECURITY_LEVEL=medium

# ================================
# Performance and Scaling
# ================================
ENABLE_OPTIMIZATION=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
MAX_WORKERS=16
MIN_WORKERS=4

# ================================
# Security Configuration
# ================================
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=false
ALLOWED_ORIGINS=
ALLOWED_HOSTS=localhost,127.0.0.1

# ================================
# Compliance Settings
# ================================
COMPLIANCE_STANDARDS=gdpr,soc2,nist_csf
DATA_RETENTION_DAYS=2555
ENABLE_AUDIT_LOGGING=true
PRIVACY_MODE=strict

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgresql://quantum_user:quantum_secure_password@postgres:5432/quantum_tasks
REDIS_URL=redis://redis:6379/0

# PostgreSQL Settings
POSTGRES_DB=quantum_tasks
POSTGRES_USER=quantum_user
POSTGRES_PASSWORD=quantum_secure_password_change_me
POSTGRES_PORT=5432

# Redis Settings
REDIS_PORT=6379

# ================================
# Monitoring and Observability
# ================================
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health
ENABLE_PROMETHEUS=true
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831

# Prometheus Settings
PROMETHEUS_PORT=9090

# Grafana Settings
GRAFANA_PORT=3000
GRAFANA_PASSWORD=quantum_admin_change_me
GRAFANA_SECRET_KEY=quantum_secret_key_change_me

# Jaeger Settings
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# ================================
# Load Balancer and Proxy
# ================================
QUANTUM_DOMAIN=localhost
QUANTUM_API_PORT=8080

# ================================
# Logging Configuration
# ================================
FLUENTD_PORT=24224
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
KIBANA_SERVER_NAME=quantum-kibana

# ================================
# Security Scanning
# ================================
SECURITY_SCAN_INTERVAL=3600

# ================================
# Original OpenAPI Generator Settings (Preserved)
# ================================
API_TITLE="Quantum-Enhanced API Documentation"
API_VERSION=2.0.0
API_DESCRIPTION="Quantum-inspired API Documentation with Advanced Task Planning"
DEFAULT_OUTPUT_FORMAT=openapi
INCLUDE_EXAMPLES=true
AUTO_DETECT_FRAMEWORK=true
VALIDATE_SCHEMAS=true
SCAN_DEPENDENCIES=true
COVERAGE_THRESHOLD=85
TEST_TIMEOUT=60